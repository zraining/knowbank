<!-- Custom head.hbs for enhanced mdBook theme -->

<!-- Enhanced meta tags for SEO and social media -->
<meta name="description" content="{{ description }}">
<meta name="keywords" content="knowledge,documentation,mdbook,guide,reference">
<meta name="author" content="{{ author }}">
<meta name="generator" content="mdBook">
<meta name="robots" content="index,follow">

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="{{ base_url }}">
<meta property="og:title" content="{{ title }}">
<meta property="og:description" content="{{ description }}">
<meta property="og:site_name" content="{{ title }}">

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="{{ base_url }}">
<meta property="twitter:title" content="{{ title }}">
<meta property="twitter:description" content="{{ description }}">

<!-- Enhanced viewport meta for better mobile support -->
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">

<!-- Theme color meta tags for browser UI -->
<meta name="theme-color" content="#1e293b" media="(prefers-color-scheme: dark)">
<meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)">

<!-- Apple touch icon and manifest -->
<link rel="apple-touch-icon" sizes="180x180" href="{{ path_to_root }}favicon.png">
<link rel="icon" type="image/png" sizes="32x32" href="{{ path_to_root }}favicon.png">
<link rel="icon" type="image/svg+xml" href="{{ path_to_root }}favicon.svg">
<link rel="shortcut icon" href="{{ path_to_root }}favicon.png">

<!-- Web app manifest -->
<link rel="manifest" href="{{ path_to_root }}manifest.json">

<!-- Preconnect to external font services for performance -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

<!-- DNS prefetch for performance -->
<link rel="dns-prefetch" href="//fonts.googleapis.com">
<link rel="dns-prefetch" href="//fonts.gstatic.com">

<!-- Security headers -->
<meta http-equiv="X-Content-Type-Options" content="nosniff">
<meta http-equiv="X-XSS-Protection" content="1; mode=block">

<!-- Performance hints -->
<meta http-equiv="Permissions-Policy" content="interest-cohort=()">

<!-- Custom CSS variables for dynamic theming -->
<style>
  :root {
    --transition-duration: 0.2s;
    --animation-easing: cubic-bezier(0.4, 0, 0.2, 1);
    --focus-ring: 0 0 0 3px rgba(59, 130, 246, 0.1);
    --backdrop-blur: blur(10px);
  }
  
  /* Smooth transitions for theme switching */
  * {
    transition: background-color var(--transition-duration) var(--animation-easing),
                color var(--transition-duration) var(--animation-easing),
                border-color var(--transition-duration) var(--animation-easing);
  }
  
  /* Enhanced focus styles for accessibility */
  *:focus-visible {
    outline: 2px solid var(--links);
    outline-offset: 2px;
    border-radius: 4px;
  }
  
  /* Reduced motion support for accessibility */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    :root {
      --border-width: 2px;
      filter: contrast(1.2);
    }
  }
  
  /* Loading animation */
  .loading {
    opacity: 0;
    animation: fadeIn 0.3s ease-in-out forwards;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  /* Custom scrollbar styles */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: var(--bg);
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb {
    background: var(--scrollbar);
    border-radius: 4px;
    transition: background var(--transition-duration) var(--animation-easing);
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: var(--icons-hover);
  }
  
  /* Firefox scrollbar */
  html {
    scrollbar-width: thin;
    scrollbar-color: var(--scrollbar) var(--bg);
  }
</style>

